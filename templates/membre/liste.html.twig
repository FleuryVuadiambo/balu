{% extends 'base.html.twig' %}

{% block title %}Liste Membre{% endblock %}

{% block body %}
<h1>Membres</h1>

<table class="table table-bordered">

    <thead class="thead-dark text-uppercase">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">email</th>
            <th scope="col ">roles</th>
            <th scope="col">pseudo</th>
            <th scope="col">nom</th>
            <th scope="col" >prenom</th>
            <th scope="col" >adresse</th>
        </tr>
    </thead>
    <tbody>

     {% for membre in liste_membre %}
        <tr>
            <td> {{ membre.id }} </td>
            <td> {{ membre.email }} </td> 
           
            <td> {% for role in membre.roles %}  
                {{ role }} 
                {% endfor %}
            </td> 
           
            
            <td> {{ membre.pseudo }} </td> 
            <td> {{ membre.nom }} </td> 
            <td> {{ membre.prenom }} </td> 
            <td> {{ membre.adresse }} </td> 
        </tr>
    {% endfor %} 
    </tbody>




{% endblock %}
