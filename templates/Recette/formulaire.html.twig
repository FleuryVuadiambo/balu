{% extends "base.html.twig" %}

{% block h1 %}
	{% if titre is defined %}
		{{ titre }}
	{% else %}
		Formulaire
	{% endif %}
{% endblock %}

{% block body %}
	{# {{ form(form) }} #}

	{{ form_start(form) }}
	{{ form_row(form.titre) }}
	{{ form_row(form.description) }}
	{{ form_row(form.categorie) }}
	{{ form_row(form.image) }}
	{{ form_row(form.preparation) }}
	{{ form_row(form.packingregient) }}

	<div class="row">
		{{ form_row(form.enregistrer, { 'label' : bouton }) }}
		<div class="form-group ml-2">
			<a href="{{ path("recette") }}" class="btn btn-danger">Annuler</a>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}

{% block title %}
	{% if titre is defined %}
		{{ titre }}
	{% else %}
		Ajouter un recette
	{% endif %}

{% endblock title %}
